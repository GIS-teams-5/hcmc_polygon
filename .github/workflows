name: Deploy to GitHub Pages

on:
  push:
    branches:
      - main   # Hoặc tên nhánh bạn đang sử dụng

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Set up Node.js
      uses: actions/setup-node@v2
      with:
        node-version: '14'  # Đảm bảo Node.js phiên bản bạn cần

    - name: Install dependencies
      run: npm install

    - name: Build the project
      run: npm run build  # Nếu bạn có bước build trước khi triển khai (ví dụ: đối với ứng dụng React hoặc các dự án sử dụng bundler)

    - name: Deploy to GitHub Pages
      uses: JamesIves/github-pages-deploy-action@v4
      with:
        branch: gh-pages  # Chọn nhánh triển khai, thường là 'gh-pages'
        folder: build      # Đường dẫn tới thư mục chứa mã nguồn đã build, nếu cần
        token: ${{ secrets.GITHUB_TOKEN }}
